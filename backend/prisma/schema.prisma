datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Comment {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  nama          String
  pesan         String
  email_comment String
}

model User {
  id_user             String      @id @default(auto()) @map("_id") @db.ObjectId
  firstName           String
  lastName            String
  email               String      @unique
  password            String
  phone               String
  ageRange            AgeRange?
  subscribeNewsletter Boolean     @default(false)
  agreeTerms          Boolean     @default(false)
  savedMenus          SavedMenu[] @relation("UserSavedMenus")
}

model SavedMenu {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  menuName    String
  ingredients String
  price       Float
  protein     Float
  karbohidrat Float
  serat       Float
  kalsium     Float
  fosfor      Float
  zat_besi    Float
  natrium     Float
  kalium      Float
  tembaga     Float
  seng        Float
  vit_c       Float
  air         Float
  energi      Float
  lemak_total Float
  createdAt   DateTime @default(now())

  user User @relation("UserSavedMenus", fields: [userId], references: [id_user])
}

enum AgeRange {
  AGE_0_6_MONTHS
  AGE_6_12_MONTHS
  AGE_1_2_YEARS
  AGE_2_5_YEARS
  AGE_5_12_YEARS
}

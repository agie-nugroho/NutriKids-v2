datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Comment {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  nama          String
  pesan         String
  email_comment String

  @@map("comments")
}

model User {
  id_user  String @id @default(auto()) @map("_id") @db.ObjectId
  nama     String
  email    String @unique
  password String
}
